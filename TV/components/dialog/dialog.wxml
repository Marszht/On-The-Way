<!--components/dialog/dialog.wxml-->
<block wx:if="{{ show }}">
    <view class="dialog_mask">
        <view class="dialog_container">
           <view class="dialog_title" 
           wx:if="{{ title }}"
           style="color: {{ titleColor }}">
           {{ title }}
           </view> 
           <view class="dialog_content" wx:if="{{ title }}">
               <view class="log_wrap" wx:if="{{ logImage && logName }}">
                   <view class="log_wrap--log" style="background-image: url('{{ logImage }}')"></view>
                   <view class="log_wrap--text">{{ logName }}</view>
               </view>
               <view 
               class="dialog__content--text" 
               wx:if="{{content}}"
               style="color: {{contentColor}}">{{content}}</view>
           </view>
           <view class="dialog__btns">
               <view class="dialog__btn--cancel" 
               bindtap="cancelCallback"
               >拒绝</view>
               <button class="getUserInfo-btn"
               open-type="getUserInfo"
               lang="zh_CN"
               bindgetuserinfo="onGotUserInfo">允许</button>
           </view>
        </view>
    </view>
</block>
