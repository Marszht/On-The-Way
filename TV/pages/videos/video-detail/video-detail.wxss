/* pages/videos/video-detail/video-detail.wxss */
@import "../recommend-item/recommend-item.wxss";
.my-video {
    width: 100%;
    height: 421.87rpx;
}

.video-box .title {
    padding: 20rpx;
    display: block;
    font-size: 35rpx;
}

.video-box .time {
    font-size: 26rpx;
    color: #979797;
    padding: 0 20rpx;
}

.section-title {
    margin: 10rpx 20rpx 0 20rpx;
    position: relative;
    padding-bottom: 20rpx;
    border-bottom: 1rpx solid #e5e5e5;
}

.section-title text {
    font-size: 32rpx;
    color: #505050;
    font-weight: 400;
}

.section-title .line {
    position: absolute;
    z-index: 9;
    width: 128rpx;
    left: 0;

    height: 1rpx;
    background: linear-gradient(to left, #2dc799, #2fa2fb);
    bottom: -1rpx;
}