@import '../movie/movie-template.wxss';

.list {
   height: 100%;
   margin: 40rpx 9rpx 0  9rpx;
   position: relative;
   padding-bottom:  92rpx;
}

.single-view-container {
   float: left;
   margin-bottom: 20rpx;
}

.abnor {
  position: relative;
  display: block;
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  overflow: hidden;
}

.abnor__box{
  position: absolute;
  display: flex;
  top: 0;
  left: 0;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.abnor__image {
  width: 514rpx;
  background: transparent no-repeat;
  background-size: cover;
}
.abnor__text {
  margin-top: 30rpx;
  color: #333;
  font-size: 28rpx;
}