<!--pages/welcome/welcome.wxml-->
<view class="container">
    <view class="remind-box" wx:if="{{remind}}">
        <image class="remind-img" src="../../images/more/loading.gif">aaa</image>
    </view>
    <block wx:else>
        <image class="title" src="../../images/more/title8.png"></image>
        <view class="content">
            <view class="hd" style="transform: rotateZ{{ angle }}deg"></view>
            <image class="logo" src="{{ userInfo.acatarUrl }}"></image>
            <image class="wave" src="../../images/more/wave.png" mode="aspectFill"></image>
             </view>
            <view class="bd">
                <image class="smalltitle" src="../../images/more/confirm-word1.png"></image>
                <view class="confirm-btn" bindtap="gotoIndex">
                    <text>进入狗窝</text>
                </view>
                <text class="copyright">欢迎体验狗蛋Tv-关注微博@我吃西红柿</text>
            </view>
    </block>
</view>
