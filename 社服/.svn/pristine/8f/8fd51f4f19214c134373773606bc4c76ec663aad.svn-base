// pages/withdraw/wihdraw.js
const app = getApp()
Page({

  /**
   * 页面的初始数据
   */
  data: {
    key: '1',
    account: '',
    // cash: '',
    value: '',
    state: ''
  },

  /**
   * 生命周期函数--监听页面加载
   */
  // showAction: function () {
  //   wx.showActionSheet
  // }
  accountChange: function(e) {
    this.data.account = e.detail.value
    // console.log(e)
  },
  withdraw: function() {
    let key = this.data.key,
        account = String(this.data.account)
    if (this.data.account) {
      wx.setStorageSync(key, account)
      this.setData({
        key: key,
        account: account
      })
      wx.navigateTo({
        // 拼接字符串
        url: "../withdrawDetail/withdrawDetail?state=" + this.data.state
      })
    }



  },
  onLoad: function(options) {
    // console.log('duiadiu')
    wx.request({
      method: "POST",
      data: {
        openid: wx.getStorageSync("openid").openid,
        cash: 50
      },
      url: app.globalData.url.WITHDRAW,
      success: res => {
        // console.log('state', res.data.data.data.status)
        console.log('state', res)
        let {
          code
        } = res.data.data
        // console.log(code)
        let {
          status,
          money
        } = res.data.data.data
        // console.log(status, money)
        if (code === 200) {
          this.setData({
            value: money,
            state: status
          })
        }

      }
    })
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function() {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function() {
    console.log(this.data.account)
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function() {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function() {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function() {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function() {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function() {

  }
})