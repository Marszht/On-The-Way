/**index.wxss**/
.wrap{
  background:#f2f2f2;
}
.swiper{
  width:100%;
  height:470rpx;
}
.swiper image{
  width:100%;
  height:100%;
}
.ad{
  height:88rpx;
  font-size: 28rpx;
  color: rgb(40, 40, 40);
  background:#fff;
  box-sizing:border-box;
  padding:0 24rpx;
  display:flex;
  align-items:center;
  justify-content:space-between;
  margin-bottom:15rpx;
}
.ad_txt{
  padding-left:12rpx;
  margin-right:30rpx;
  border-right:1rpx solid #ccc;
  flex:1;
}
.address{
  width:30rpx;
  height:36rpx;
}
.tel{
  width:27rpx;
  height:26rpx;
}


