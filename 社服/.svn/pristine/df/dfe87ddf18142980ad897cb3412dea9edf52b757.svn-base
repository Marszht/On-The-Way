/* pages/checkDetail/checkDetail.wxss */

.checkDetail {
    border-top: 1rpx solid rgb(177, 177, 177);
}

.head {
    height: 42rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 24rpx;
}

.mount {
    display: flex;
    align-items: center;
}

.checkDetail_time {
    margin-left: 29rpx;
    color: #989898;
}

.checkDetail_pay,
.checkDetail_income {
    color: #e02f22;
    margin-right: 23rpx;
}

.content {
    /* display: flex; */
    height: 114rpx;
    border-bottom: 1px solid  #989898;

}

.content_head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 28rpx;
}
.type_text, .type_income{
    margin-left: 29rpx;
    margin-top: 29rpx; 
}

.content_foot {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 22rpx;
    margin-left: 29rpx;
    margin-bottom: 27rpx;
    color: #989898;
}
.content_foot .time {
    display: flex;
    align-items: center;

}
.type_total , .type_income{
    margin-right: 23rpx; 
}
.type_income{
    color: rgb(101,101,101);
}
.type_hour {
    margin-left: 20rpx;
}