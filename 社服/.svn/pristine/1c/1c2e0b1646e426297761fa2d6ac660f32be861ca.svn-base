<!--index.wxml-->
<view class="wrap">
  <swiper indicator-dots autoplay interval="2000" circular class="swiper">
    <block wx:for="{{ info.banners }}" wx:key="index">
      <swiper-item>
        <image src="{{ item.pic }}" class="slide-image" title="{{ item.title }}" />
      </swiper-item>
    </block>
  </swiper>

  <view class="shop">
    <view class="ad">
      <image src="../../static/img/index/shop.png" class="shop_icon"></image>
      <view class="ad_txt">店铺介绍：</view>
    </view>
    <view class="shop_info">{{ info.shops.intro }}</view>
  </view>

  <view class="ad">
    <image src="../../static/img/index/address.png" class="address"></image>
    <view class="ad_txt">地址：{{ info.shops.address }}</view>
  </view>

  <view class="ad" bindtap="tel" data-tel="{{ info.shops.tel }}">
    <image src="../../static/img/index/tel.png" class="tel"></image>
    <view class="ad_txt">电话：{{ info.shops.tel }}</view>
  </view>

  <view class="servers">
    <view class="ad">
      <image src="../../static/img/index/servers.png" class="shop_icon"></image>
      <view class="ad_txt">服务：</view>
    </view>
    <view class="servers_in">
      <view class="servers_info" wx:for="{{ info.service }}" wx:key="index">{{ item.service_name }}</view>
    </view>
  </view>

  <view class="contact">
    <image src="../../static/img/index/contact.png"></image>
    <button class="then_btn" open-type="contact" ></button>
  </view>

</view>
