/* pages/detail/detail.wxss */
.wrap{
  display:flex;
  flex-direction:column;
}
.detail_content{
  flex:1;
  overflow-y:auto;
}
.top_img{
  width:100%;
  height:385rpx;
  background:#ccc;
  position:relative;
}
.top_img image{
  width:100%;
  height:100%;
}
.top_timer{
  position:absolute;
  right:0;
  bottom:0;
  padding:8rpx 20rpx;
  color:#fff;
  background:rgba( 0,0,0,.4);
  border-radius:8rpx 0 0 0;
}
.details image{
  width:100%;
}
.detail_click{
  height:100rpx;
  display:flex;
  align-items:center;
}
.detail_cut{
  width:190rpx;
  height:100%;
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:space-around;
  color:#989898;
  position:relative;
}
.then_btn{
  position:absolute;
  left:0;
  top:0;
  opacity:0;
  width:100%;
  height:100%;
}
.detail_btn{
  flex:1;
  text-align:center;
}
.detail_icon{
  width:40rpx;
  height:38rpx;
}
.detail_icon image{
  width:100%;
  height:100%;
}
.detail_btn{
  background:#e02e24;
  color:#fff;
  height:100%;
  line-height:100rpx;
}