/* pages/find/find.wxss */
.wrap{
  background:#f2f2f2;
  display:flex;
  flex-direction:column;
}

.tab{
  flex:1;
  display:flex;
}
.tab_left,.tab_right{
  height:100%;
  overflow-y:auto;
}
.tab_left{
  width:150rpx;
  text-align:center;
  color:#989898;
}
.tab_item.tab_active{
  color:#ff9f42;
  background:rgba( 0, 0, 0, 0);
  border-right:1px solid #f2f2f2;
}
.tab_item{
  background:#fff;
  padding:30rpx 0;
  border-bottom:1px solid #f2f2f2;
  border-right:1px solid #c4c4c4;
}
.tab_right{
  flex:1;
  box-sizing:border-box;
  padding:10rpx 16rpx;
}



