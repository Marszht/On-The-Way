// pages/find/find.js
const app = getApp();
Page({

  /**
   * 页面的初始数据
   */
  data: {
    leftList:[],
    leftIndex:0,
    oCid:{},
    cid:"",
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    this.getLeftList();
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {
  
  },
  tabLeft( e ){
    let { index, id } = e.target.dataset;
    if( index !== this.data.leftIndex ){
      this.getCat( id )
      this.setData({ leftIndex: index })
    }
  },
  getLeftList(  ){
    wx.request({
      url: app.globalData.url.FINDCAT,
      success: res => {
        let { code, data } = res.data.data;
        if (code === 200) {
          this.setData({ leftList: data })
          data[ 0 ] && this.getCat( data[0].id )
        }
      }
    })
  },
  getCat( cid ){
    let obj = this.data.oCid;
    if (!obj[ cid ] ){
      wx.request({
        url: app.globalData.url.FINDCAT,
        data:{ cid },
        success: res => {
          let { code, data } = res.data.data;
          if (code === 200) {
            obj[ cid ] = data;
            this.setData({ oCid: obj })
          }
        }
      })
    }
    this.setData({ cid })
  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {
  
  }
})