<!-- pages/collections/collections.wxml -->
<scroll-view scroll-y>
    <block wx:for="{{collectionLists}}" wx:key="index">
        <view class="col_content">
            <image class="col_img" src="{{item.img}}" ></image>
            <view class="col_info">
                <view class="col_info-des">{{item.des}}</view>
                <view class="col_info_foot">
                    <view class="col_info-price">￥{{item.price}}</view>
                    <view class="col_info-col" 
                    bindtap="cancelCollection"
                    data-index="{{index}}">取消收藏</view>
                </view>
            </view>
        </view>
    </block>
</scroll-view>