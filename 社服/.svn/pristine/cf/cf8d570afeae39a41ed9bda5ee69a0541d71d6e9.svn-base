/* pages/groupDetail/groupDetail.wxss */
.wrap{
  display:flex;
  flex-direction:column;
  background:#f2f2f2;
}
.gd_top{
  flex:1;
  overflow-y:auto;
}

.card_wrap{
  padding:30rpx;
  height:240rpx;
  background:#fff;
}
.card{
  height:100%;
  border:1px solid #999;
  box-sizing:border-box;
  padding:20rpx;
  box-shadow: 0 0 18rpx #666;
  border-radius:12rpx;
  display:flex;
}
.card_img{
  height:100%;
  width:199rpx;
  background:#ccc;
}
.card_img image{
  width:100%;
  height:100%;
}
.card_content{
  flex:1;
  padding-left:20rpx;
  display:flex;
  flex-direction:column;
  overflow:hidden;
}
.card_p{
  flex:1;
}
.card_h1{
  padding-top:5rpx;
  font-size:32rpx;
  white-space:nowrap;
}
.card_relive{
  font-size:34rpx;
  color:#e02e24;
  margin-right:20rpx;
}
.card_single{
  color:#989898;
  font-size:22rpx;
}
.card_single text{
  text-decoration-line:line-through;
}


.guoup_info{
  background:#fff;
  padding:22rpx;
  margin-bottom:20rpx;
}
.group_status{
  font-size:32rpx;
  margin-bottom:24rpx;
}
.group_statu{
  color:#e02e24;
}
.group_htime{
  color:#656565;
}
.group_itmes{
  display:flex;
  flex-wrap:wrap;
}
.group_imgs{
  width:100rpx;
  height:100rpx;
  margin:20rpx 20rpx 0;
}
.group_imgs image{
  border-radius:100%;
  width:100%;
  height:100%;
}

.rule{
  background:#fff;
  padding:30rpx 22rpx;
}
.rule_title{
  margin-bottom:10rpx;
}
.rule_content{
  color:#656565;
  font-size:24rpx;
  line-height:42rpx;
  white-space:pre-wrap;
}

.is_leader{
  position:relative;
}
.is_leader::before{
  content:"拼主";
  background:#ffa935;
  color:#fff;
  position:absolute;
  left:-10rpx;
  top:-10rpx;
  font-size:20rpx;
  padding:5rpx 15rpx;
  border:1px solid #fff;
  border-radius:20rpx;
}

.detail_click{
  height:100rpx;
  display:flex;
  align-items:center;
}
.detail_cut{
  width:190rpx;
  height:100%;
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:space-around;
  color:#989898;
  position:relative;
}
.then_btn{
  position:absolute;
  left:0;
  top:0;
  opacity:0;
  width:100%;
  height:100%;
}
.detail_btn{
  flex:1;
  text-align:center;
  position:relative;
}
.detail_btn button{
  position:absolute;
  left:0;
  top:0;
  width:100%;
  height:100%;
  opacity:0;
}
.detail_icon{
  width:40rpx;
  height:38rpx;
}
.detail_icon image{
  width:100%;
  height:100%;
}
.detail_btn{
  background:#e02e24;
  color:#fff;
  height:100%;
  line-height:100rpx;
}
.gray{
  background:#999;

}