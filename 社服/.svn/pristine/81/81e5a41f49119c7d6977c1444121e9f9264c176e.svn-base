    border: 2rpx solid #fff; 
  } */
  .item{
    height: 89rpx;
    width: 100%;
    line-height: 89rpx;
    background: #fff;
    position: relative;
    border: 1px solid rgb(242, 242, 242) 
  }
  .item .item_icon {
    width: 30rpx;
    height: 27rpx;
    margin-left: 27rpx;
    vertical-align: middle;
  }
  .item .content {
    display: inline-block;
    margin-left: 23rpx;
    line-height: 28rpx;
    height: 27rpx;
    font-size: 28rpx;
    font-weight: 550;
  }
  .content:after {
    content: '';
    position: absolute;
    top: 35rpx;
    right: 35rpx;
    width: 20rpx;
    height: 20rpx;
    border: 3rpx solid rgb(177, 177, 177);
    border-left-color: transparent;
    border-bottom-color: transparent;
    transform: rotateZ(45deg);
  }
  .spacebetween {
    margin-top: 22rpx;
  }
  