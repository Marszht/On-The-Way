/* pages/my/my.wxss */

page{
  background: #ebebeb;
  -webkit-font-smoothing: antialiased;
  box-sizing: border-box;
}
.user_info{
  width: 100%;
  height: 370rpx;
  position: relative;
  background: #f65b53;
  z-index: -1;
}
.user_info .avatar{
  display: inline-block;
  width: 140rpx;
  height: 140rpx;
  margin: 49rpx 24rpx;
  border-radius: 50%;
  border: 4rpx solid #FFF;
}

.user_info .user_nick_name {
  display: inline-block;
  font-size: 34rpx;
  color: rgb(255,255,255);
  position: absolute;
  top: 94rpx;
  margin-left: 19rpx;
  }
