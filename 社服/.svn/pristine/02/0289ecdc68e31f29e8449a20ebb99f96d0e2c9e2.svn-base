<!--pages/help/help.wxml-->
<view class="wrap">
  <view class="ad">
    <image src="{{ adImg }}"></image>
  </view>
  <view class="tab_title_wrap">
    <view 
      wx:for="{{ tab }}" 
      wx:key="index" 
      data-index="{{ index }}"
      bindtap="changeTab"
      class="tab_title {{ index ? 'right_line' : '' }} {{ index === tabIndex ? 'active' : '' }}" 
      >
      {{ item.text }}
    </view>
  </view>

  <view class="tab_content_wrap" wx:if="{{ tab[ tabIndex ].children }}">
    <view 
      wx:for="{{ tab[ tabIndex ].children }}"
      wx:key='index'
      class="tab_content"
      >
      <image src="{{ item.img }}"/>
      <view class="tc_title">{{ item.title }}</view>
      <view class="tc_item">
        <view>
          <text class="active_price">{{ item.active_price }}</text>
          <text class="price">{{ item.price }}</text>
        </view>
        <view class="require">{{ item.require }}</view>
        <view class="is_activity_wrap">
          <text class="is_activity {{ item.is_activity ? '' : 'activity' }}">{{ item.is_activity ? '去开团' : '已结束' }}</text>
        </view>
      </view>
    </view>
  </view>

  <view class="tab_content_wrap tc_help" wx:if="{{ tab[ tabIndex ].history }}">
    <image class="tc_help_bg" src="../../static/img/help_bg.png"></image>
    <view class="tc_help_content">
      <view class="tcp_tip"><image src='../../static/img/help_tip.png'></image><text> 活 动 规 则 </text></view>
      <view class="tcp_img" style="background:url(../../static/img/default.jpg) no-repeat center/cover">
        <image src="../../static/img/help_header.png"></image>
        <view class="tcp_img_tip" style="background:url(../../static/img/help_img_tip.png) no-repeat center/cover">
          累积分享好友帮我支付
          可以领取奖励哟 ~
        </view>
      </view>
      <view class="tcp_line">
        <view class="tcp_line_animation"></view>
        <view class="tcp_box">
          <image src="../../static/img/help_box.png"></image>
        </view>
      </view>
      <view class="tcp_btn"> 分享领奖品 </view>
    </view>

    <view class="tcp_share">
      <view class="tcp_share_title">分享记录</view>
      <view class="tcp_share_item" wx:for="{{ tab[ tabIndex ].history }}" wx:key="index">
        <view class="tcp_header">
          <image src="../../static/img/default.jpg"></image>
          <view>
            <view class="user_name">{{ item.name }}</view>
            <view class="user_timer">{{ item.timer }}</view>
          </view>
        </view>
        <view class="user_pay">{{ item.pay }}</view>
      </view>
    </view>
  </view>
</view>
