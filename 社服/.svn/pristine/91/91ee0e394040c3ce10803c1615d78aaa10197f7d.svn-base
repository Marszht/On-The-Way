<!--pages/detail/detail.wxml-->
<view class="wrap">
  <view class="detail_content">
    <view class="top_img">
      <image src="{{ detail.img }}"></image>
      <view class="top_timer" >活动距离结束还有{{ dTimer }}</view>
    </view>
    <view>
      <view>{{ detail.name }}</view>
      <view>{{ detail.group_num }}</view>
      <view><text>￥{{ detail.group_price }}</text><text>拼团价 ￥{{ detail.single_price }}</text></view>
      <view>{{ detail.rules }}</view>
    </view>

    <view class="details">
      <image wx:for="{{ detail.content }}" wx:key="index" src="{{ item }}" mode="widthFix"></image>
    </view>
  </view>
  <view class="detail_click">
    <view class="detail_cut" open-type="contact" >
      <view class="detail_icon"><image src="../../static/img/detail/ask.png"></image></view>
      <view>联系店家</view>
      <button class="then_btn" open-type="contact" ></button>
    </view>
    <view class="detail_btn">发起助力</view>
  </view>
</view>
