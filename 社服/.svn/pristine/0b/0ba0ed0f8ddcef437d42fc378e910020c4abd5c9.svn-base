<!--pages/details/details.wxml-->
<view class="wrap">
  <view class="detail_content">
    <view class="top_img">
      <image src="{{ list.img }}"></image>
    </view>

    <view class="details_info">
      <view class="details_price">￥{{ list.price }}</view>
      <view>{{ list.name }}</view>
    </view>

    <view class="desc_info">
      <view class="details_desc">
        <view class="desc_title">详情描述</view>
        <view class="desc_content">{{ list.desc }}</view>
      </view>
      <view class="desc_inline">
        <view class="desc_left">功能：</view>
        <view class="desc_content">{{ list.function }}</view>
      </view>
      <view class="desc_inline">
        <view class="desc_left">效果：</view>
        <view class="desc_content">{{ list.effect }}</view>
      </view>
    </view>

    <view class="details">
      <image src="../../static/img/detail/details.png" mode="widthFix"></image>
      <image wx:for="{{ list.content }}" wx:key="index" src="{{ item }}" mode="widthFix"></image>
    </view>
  </view>

  <view class="detail_click">
    <view class="detail_cut" open-type="contact" >
      <view class="detail_icon"><image src="../../static/img/detail/ask.png"></image></view>
      <view>联系店家</view>
      <button class="then_btn" open-type="contact" ></button>
    </view>
    <view class="detail_cut" bindtap="goLike">
      <view class="detail_icon details_icon">
        <image src="../../static/img/details/{{ isLike ? 'like' : 'unlike' }}.png"></image>
      </view>
      <view>收藏</view>
    </view>
    <view class="detail_btn" bindtap="initGroup">立即购买</view>
  </view>
</view>