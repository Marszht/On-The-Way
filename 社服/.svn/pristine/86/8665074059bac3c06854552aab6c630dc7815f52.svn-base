/**index.wxss**/
.swiper{
  width:100%;
  height:421rpx;
}
.swiper image{
  width:100%;
  height:100%;
}
.shop .ad, .servers .ad{
  border-bottom:0;
}
.ad{
  height:88rpx;
  font-size: 28rpx;
  color: rgb(40, 40, 40);
  background:#fff;
  box-sizing:border-box;
  padding:0 24rpx;
  display:flex;
  align-items:center;
  justify-content:space-between;
  border-bottom:1rpx solid #f2f2f2;
}
.ad_txt{
  padding-left:12rpx;
  flex:1;
}

.shop_info{
  background:#fff;
  margin-bottom:1rpx;
  color:#656565;
  padding:0 24rpx 24rpx;
}
.shop_icon{
  width:31rpx;
  height:28rpx;
}
.address{
  width:30rpx;
  height:36rpx;
}
.tel{
  width:30rpx;
  height:34rpx;
}
.servers{
  border-top:19rpx solid #f2f2f2;
  padding-bottom:10rpx;
}
.servers_in{
  padding:0 24rpx;
}
.servers_info{
  display:inline-block;
  border:1rpx solid #ccc; 
  padding:7rpx 14rpx;
  margin:7rpx;
  color:#656565;
}


