<!-- pages/checkDetail/checkDetail.wxml -->
<scroll-view scroll-y>
<view class="wrap">
    <view class="checkDetail">
        <block wx:for="{{checkList}}" wx:key="id">
            <!-- <view class="head"> -->
                <!-- <view class="checkDetail_time ">{{ item.time }}</view> -->
                <!-- <view class="mount">
                    <view class="checkDetail_pay ">支出: {{item.pay}}</view>
                    <view class="checkDetail_income ">收入: {{item.income}}</view>
                </view> -->
            <!-- </view> -->
            <block wx:for="{{ item.types }}" wx:key="id">
                <view class="content">
                    <view class="content_head">
                        <view class="type_text">{{ item.type }}</view>
                        <view class="type_income">{{ item.income }}</view>
                    </view>
                    <view class="content_foot">
                        <view class="time">
                            <view class="type_day">{{ item.day }}</view>
                            <view class="type_hour">{{ item.hour }}</view>
                        </view>
                        <view class="type_total">{{ item.total }}</view>
                    </view>
                </view>
            </block>
        </block>
    </view>
</view>
</scroll-view>