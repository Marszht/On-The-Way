<!--pages/withdrawDetail/withdrawDetail.wxml-->
<view class="contatiner">

    <!-- 提现步骤 -->
   <view class="steps">
     <view class="step_content {{ state === 0 ? 'changeState': ''}}">
         <view class="step-icon">
         </view>
         <text class="info">发起提现申请</text>
     </view>

      <view class="step_content {{ state === 1 ? 'changeState': ''}}">
         <view class="step-icon"></view>
         <text class="info">处理中</text>
     </view>
     
      <view class="step_content {{ state===2 ? 'changeState': ''}}">
         <view class="step-icon"></view>
         <text class="info">到账成功</text>
     </view>
   </view>

   <!-- foot -->
   <view class="foot">
       <view class="foot_one">
       <text class="foot_info">提现金额</text>
       <view class="foot_count">￥{{ account}}</view>
       </view>
       <view class="foot_one">
           <text class="foot_info">到账</text>
           <text class="foot_count">微信</text>
       </view>
   </view>

   <!-- button 完成 -->
   <button class="btn_complete" bindtap="complete">
       <text class="btn_txt">完成</text>
   </button>
</view>
