<map id="map" 
  latitude="{{ address.latitude }}"
  longitude="{{ address.longitude }}"
  scale="100" 
  controls="{{controls}}"
  bindcontroltap="controltap" 
  markers="{{markers}}" 
  bindmarkertap="markertap" 
  polyline="{{polyline}}" 
  bindregionchange="regionchange" 
  show-location 
  style="width: 100%; height: 100%;"
  >
</map>
