/* pages/shareHelp/shareHelp.wxss */
/* pages/help/ceng/ceng.wxss */
.tc_help{
  background:#000;
  position:relative;
  width:100%;
  height:100%;
}
.tc_help_bg{
  width:100%;
  height:670rpx;
}
.tc_help_content{
  position:absolute;
  left:0;
  top:0;
  width:100%;
}
.tcp_tip{
  float:right;
  color:#fff;
  padding:22rpx 12rpx;
  font-size:22rpx;
  display:flex;
  align-items:center;
}
.tcp_tip image{
  width:30rpx;
  height:30rpx;
  margin-right:8rpx;
}
.tcp_img{
  position:absolute;
  left:90rpx;
  top:100rpx;
  width:76rpx;
  height:76rpx;
  border-radius:50%;
}
.tcp_img image{
  margin-left:-9rpx;
  margin-top:-12rpx;
  width:86rpx;
  height:129rpx;
}
.tcp_img_tip{
  width:316rpx;
  height:100rpx;
  position:absolute;
  left:118%;
  top:-30rpx;
  box-sizing:border-box;
  padding: 20rpx 20rpx 0 48rpx;
  font-size:24rpx;
  color:#656565;
}
.tcp_line{
  width:576rpx;
  height:30rpx;
  padding:2rpx 0 2rpx 2rpx;
  background:#fff;
  position:absolute;
  left:66rpx;
  top:242rpx;
  border-radius: 18rpx 0 0 18rpx;
}
.tcp_line_animation{
  height:100%;
  width:50%;
  background:#ff9f42;
  border-radius: 16rpx;
}
.tcp_box{
  position:absolute;
  left:100%;
  top:-15rpx;
  width:48rpx;
  height:118rpx;
  background:#fff;
  border-radius:0 0 24rpx 24rpx;
}
.tcp_box image{
  width:30rpx;
  height:24rpx;
  display:block;
  margin:75rpx auto;
}
.tcp_btn{
  width:222rpx;
  height:80rpx;
  background:#fff;
  position:absolute;
  left:260rpx;
  top:460rpx;
  border-radius:40rpx;
  text-align:center;
  line-height:80rpx;
  color:#e02e24;
  font-size:32rpx;
}

.tcp_share{
  color:#fff;
  box-sizing:border-box;
  padding:50rpx 38rpx 0;
}
.tcp_share_title{
  text-align:center;
  font-size:34rpx;
}
.tcp_share_item{
  padding:20rpx 0;
  display:flex;
  align-items:center;
  justify-content:space-between;
}
.tcp_header{
  display:flex;
  align-items:center;
}
.tcp_header image{
  width:70rpx;
  height:70rpx;
  border-radius:50%;
  margin-right:15rpx;
}
.user_name{
  font-size:28rpx;
}
.user_timer{
  font-size:24rpx;
  color:#989898;
}
.toast{
  position:absolute;
  left:0;
  top:0;
  width:100%;
  height:100%;
  background:rgba( 0, 0, 0,.4);
  display:flex;
  align-items:center;
  justify-content:center;
}
.activity{
  background:#fff;
  width:520rpx;
  border-radius:8rpx;
}
.act_title{
  text-align:center;
  font-size:34rpx;
  color:#282828;
  font-weight:900;
  line-height:100rpx;
  border-bottom:1px solid #b2b2b2;
}
.act_content{
  padding:40rpx 52rpx;
  font-size:28rpx;
  color:#656565;
  white-space:pre-wrap;
}
.act_close{
  width:260rpx;
  margin:0 auto;
  padding:20rpx 0;
  border-radius:8rpx;
  background:#ccc;
  text-align:center;
  margin-bottom:40rpx;
}
.importoast{
  z-index:998;
}

.selectBox{
  background:#fff;
  border-radius:12rpx;
}
.select_text{
  font-size:34rpx;
  font-weight:900;
  text-align:center;
  padding:32rpx 0;
  border-bottom:1rpx solid #b2b2b2;
}
.select_box{
  display:flex;
  padding:30rpx;
  max-width:611rpx;
  flex-wrap:wrap;
}
.select_img{
  width:110rpx;
  height:110rpx;
  margin:0 5rpx 12rpx;
  border:1rpx solid #b2b2b2;
}
.select_img image{
  width:100%;
  height:100%;
}
.select_name{
  text-align:center;
  font-size:24rpx;
  color:#989898;
}
.select_shadow{
  border:1rpx solid #e02e24;
  box-shadow: 0 0 9rpx #e02e24;
}
.select_btn{
  margin-bottom:30rpx;
  text-align:center;
}
.select_btnText{
  background:#e02e24;
  width:80%;
  padding:20rpx 0;
  margin:0 auto;
  border-radius:8rpx;
  color:#fff;
}