.tab_title_wrap{
  display:flex;
}
.tab_title{
  flex:1;
  text-align:center;
  color:#656565;
  padding: 30rpx 0;
}
.tab_title.active{
  font-weight:bolder;
  color:#e02e24;
}
.right_line{
  border-left:1rpx solid #f2f2f2;
}
.tab_content_wrap{
  flex:1;
  box-sizing:border-box;
  background:#f2f2f2;
  padding: 20rpx 25rpx 0;
  overflow:auto;
}
.tab_content{
  border-radius:12rpx;
  width:100%;
  overflow:hidden;
  background:#fff;
  margin-bottom:20rpx;
}
.tab_content image{
  width:100%;
  height:264rpx;
}
.tc_title{
  color:#282828;
  padding:18rpx 30rpx;
}
.tc_item{
  display:flex;
  align-items:center;
  padding:0 20rpx 25rpx 30rpx;
}
.active_price{
  color:#e02e24;
  font-size:36rpx;
}
.price{
  color:#989898;
  font-size:22rpx;
  text-decoration:line-through;
}
.require{
  color:#e07670;
  font-size:22rpx;
  padding:5rpx 10rpx;
  border:1rpx solid #e07670;
  border-radius:6rpx;
  margin-left:20rpx;
}
.is_activity_wrap{
  flex:1;
  text-align:right;
}
.is_activity{
  background:#e02e24;
  color:#fff;
  border-radius:10rpx;
  padding:12rpx 30rpx;
}
.is_activity.activity{
  background:#989898;
}
.tc_help{
  padding:0;
  background:#000;

}
.other{
  display:flex;
  flex-direction:column;
}