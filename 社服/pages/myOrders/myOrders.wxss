/* pages/myOrders/myOrders.wxss */
.wrap {
  background-color: #f2f2f2
}

.tab_title_wrap {
  display: flex;
  height: 90rpx;

  border: 1rpx solid #f2f2f2;
}

.tab_title {
  flex: 1;
  text-align: center;
  background-color: white;
  /* color: white; */
  padding: 30rpx 0;
}

.tab_title.active {
  font-weight: bolder;
  color: #e02e24;
}

.spacebetween {
  margin-top: 22rpx;
}

.tab_content .content_head {
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
  height: 81rpx;
  background-color: white;
  border-bottom: 1rpx solid #f2f2f2;
}

.content_head .head_time {
  flex: 1;
  padding-left: 26rpx;
  color: #989898;
  font-size: 24rpx;
}

.content_head .head_des {
  font-size: 28rpx;
  color: #e02e24;
}

.delIcon {
  height: 34rpx;
  width: 34rpx;
}

.head_des,
.delIcon {
  padding-right: 24rpx;
}

.main_content {
  display: flex;
  height: 242rpx;
  align-items: center;
  margin-left: 26rpx;
  /* justify-content: space-around; */
}

.main_content .img {
  height: 200rpx;
  width: 200rpx;

}

.main_right {
  display: flex;
  flex-direction: column;

  margin-left: 30rpx;


}

.main_content_des {
  font-size: 28rpx;
}

.main_right .duration {
  /* display: inline; */
}

.server_time {
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #989898;
  font-size: 22rpx;
  /* margin-left: 40rpx; */
}

.duration {
  margin-left: 20rpx;
  color: #989898;
}

.paydes {
  display: flex;
  align-items: center;
  /* flex-direction: row-reverse; */
  height: 81rpx;
  /* justify-content: space-between; */
  background-color: white;
  border: 1rpx solid #f2f2f2;
  font-size: 24rpx;
  color: #989898;
  padding-left: 360rpx;
}

.paydes .pay {
  color: #e02e24;
  font-size: 34rpx;
}

.show_info {
  display: flex;
  flex: 1;
  flex-direction: row-reverse;
  align-items: center;
  height: 81rpx;
  background-color: white;
  color: #f1bb81;
  padding-right: 30rpx;
}

.show_info .type {
  margin-left: 10rpx;
  height: 52rpx;
  width: 152rpx;
  line-height: 52rpx;
  border: 1rpx solid #f1bb81;
  text-align: center;
  border-radius: 10rpx;
}