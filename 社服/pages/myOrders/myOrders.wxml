<!-- pages/myOrders/myOrders.wxml -->
<scroll-view scroll-y>
    <view class="wrap">
        <view class="tab_title_wrap">
            <view class="tab_title  {{ index === tabIndex ? 'active' : ''}}" wx:for="{{tab}}" wx:key:="index" data-index="{{index}}" bindtap="changeTab">
                {{item.text}}
            </view>
        </view>
        <view class="spacebetween"></view>
        <view class="tab_content_wrap">
            <view class="tab_content" wx:for="{{ tab [ tabIndex ].children }}" wx:key="index">
                <view class="content_head">
                    <view class="head_time">{{ item.time }}</view>
                    <text class="head_des">{{item.text}}</text>
                    <image class="delIcon" src="../../static/img/my/delIcon.png" bindtab="delete" />
                </view>
                <view class="main_content">
                    <image class="img" src="../../static/img/my/interesting.jpg" mode="aspectFit"></image>
                    <view class="main_right">
                        <txt class="main_content_des">{{ item.des }}</txt>
                        <view class="server_time">
                            <view class="use_time">{{ item.useTime }}</view>
                            <view class="duration">{{ item.duration }}</view>
                        </view>
                    </view>
                </view>
                <view class="paydes">
                    <text class="paydes_content">共一件服务 需付款:</text>
                    <view class="pay">{{ item.pay }}</view>
                </view>
                <view class="show_info">
                    <text class="type">去支付</text>
                    <text class="type">去参加</text>
                </view>
                <view class="spacebetween"></view>
            </view>
        </view>
    </view>
</scroll-view>