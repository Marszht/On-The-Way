<!--pages/detail/detail.wxml-->
<view class="wrap">
  <view class="detail_content">
    <view class="top_img">
      <image src="{{ detail.img }}"></image>
      <view class="top_timer" >活动距离结束还有{{ dTimer }}</view>
    </view>

    <view class="diy_info">
      <view class="diy_top"> 
        <text class="diy_title">{{ detail.name }}</text>
        <text class="diy_group">{{ detail.group_num }} </text>
      </view>
      <view ><text class="diy_price">￥{{ detail.group_price }}</text><text class="diy_single">拼团价<text class="single_price">￥{{ detail.single_price }}</text></text></view>
    </view>

    <view class="diy_list">
      <view class="diy_play">拼团玩法</view>
      <view class="diy_pre">{{ detail.rules }}</view>
    </view>

    <view class="group_list" wx:if="{{ lt.length }}" >
      <view class="group_title">已有用户开团，可直接参与</view>
      <view wx:for="{{ lt }}" wx:key="index" class="group_item">
        <view class="group_img"><image src="{{ item.avatarUrl }}"></image></view>
        <view class="group_content"> 
          <view class="group_name"><text >{{ item.nickName }}</text><text class="group_nick">{{ item.num }}</text></view>
          <view class="group_info"><text>{{ item.pnum }} </text><text> 剩余 {{ item.htime }}</text></view>
        </view>
        <view class="group_btn" data-id="{{ item.tuanhao }}" bindtap="joinGroup">{{ item.title }}</view>
      </view>
    </view>

    <view class="d_line"></view>
    <view class="details">
      <image src="../../static/img/detail/details.png" mode="widthFix"></image>
      <image wx:for="{{ detail.content }}" wx:key="index" src="{{ item }}" mode="widthFix"></image>
    </view>
  </view>
  <view class="detail_click">
    <view class="detail_cut" open-type="contact" >
      <view class="detail_icon"><image src="../../static/img/detail/ask.png"></image></view>
      <view>联系店家</view>
      <button class="then_btn" open-type="contact" ></button>
    </view>
    <view class="detail_btn" bindtap="initGroup">发起助力</view>
  </view>
</view>
