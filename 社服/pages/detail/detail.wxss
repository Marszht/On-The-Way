/* pages/detail/detail.wxss */
.wrap{
  display:flex;
  flex-direction:column;
  background:#f2f2f2;
}
.detail_content{
  flex:1;
  overflow-y:auto;
}
.top_img{
  width:100%;
  height:385rpx;
  background:#ccc;
  position:relative;
}
.top_img image{
  width:100%;
  height:100%;
}
.top_timer{
  position:absolute;
  right:0;
  bottom:0;
  padding:8rpx 20rpx;
  color:#fff;
  min-width:400rpx;
  background:rgba( 0,0,0,.4);
  border-radius:8rpx 0 0 0;
}

.diy_info{
  padding:24rpx;
  background:#fff;
}
.diy_top{
  margin:10rpx 0;
}
.diy_title{
  font-size:32rpx;
  color:#282828;
}
.diy_group{
  background:#e02e24;
  color:#fff;
  border-radius:8rpx;
  padding:7rpx 15rpx;
  margin-left:32rpx;
}
.diy_price{
  color:#e02e24;
  font-size:34rpx;
}
.diy_single{
  color:#989898;
  font-size:22rpx;
  margin-left:10rpx;
}
.single_price{
  margin-left:10rpx;
  text-decoration:line-through;
}

.diy_list{
  padding:24rpx;
}
.diy_play{
  color:#282828;
  margin-bottom:10rpx;
  font-weight:900;
}
.diy_pre{
  white-space:pre-wrap;
  line-height:40rpx;
  font-size:22rpx;
  color:#656565;
}

.group_list{
  background:#fff;
}
.group_title{
  color:#656565;
  font-size:26rpx;
  padding:30rpx 24rpx;
}
.group_item{
  border-top:1px solid #f2f2f2;
  padding:20rpx 26rpx;
  display:flex;
  align-items:center;
  justify-content:space-between;
}
.group_img{
  width:70rpx;
  height:70rpx;
  background:#656565;
  border-radius:100%;
  overflow:hidden;
}
.group_img image{
  width:100%;
  height:100%;
}
.group_content{
  flex:1;
  padding-left:16rpx;
}
.group_btn{
  width:150rpx;
  height:60rpx;
  background:#e02e24;
  color:#fff;
  font-size:26rpx;
  border-radius:10rpx;
  text-align:center;
  line-height:60rpx;
}
.group_name{
  margin-bottom:10rpx;
}
.group_nick{
  padding:0 10rpx;
  margin-left:20rpx;
  border:1px solid #e02e24;
  color:#e02e24;
  border-radius:8rpx;
}
.group_info{
  font-size:20rpx;
  color:#989898;
}

.d_line{
  height:20rpx;
}
.details image{
  width:100%;
}
.detail_click{
  height:100rpx;
  display:flex;
  align-items:center;
}
.detail_cut{
  width:190rpx;
  height:100%;
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:space-around;
  color:#989898;
  position:relative;
}
.then_btn{
  position:absolute;
  left:0;
  top:0;
  opacity:0;
  width:100%;
  height:100%;
}
.detail_btn{
  flex:1;
  text-align:center;
}
.detail_icon{
  width:40rpx;
  height:38rpx;
}
.detail_icon image{
  width:100%;
  height:100%;
}
.detail_btn{
  background:#e02e24;
  color:#fff;
  height:100%;
  line-height:100rpx;
}