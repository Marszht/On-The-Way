/* components/card/index.wxss */
.content_item{
  background:#fff;
  margin:10rpx 0;
  padding:15rpx;
  border-radius:8rpx;
  display:flex;
  align-items:center;
}
.ct_img{
  width:165rpx;
  height:165rpx;
  margin-right:15rpx;
}
.content{
  min-height:165rpx;
  flex:1;
  display:flex;
  flex-direction:column;
}
.ct_title{
  color:#282828;
}
.ct_time{
  color:#989898;  
  font-size:22rpx;
  flex:1;
}
.ct_time text{
  margin-left:30rpx;
}
.ct_price{
  font-size:32rpx;
  color:#e02e24;
}