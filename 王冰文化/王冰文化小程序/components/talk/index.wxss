@import "/plugins/wxParse/wxParse.wxss";
.content{
  background:#fff;
  padding:24rpx;
  border-top:1rpx solid #f0f0f0;
  border-bottom:1rpx solid #f0f0f0;
  margin-bottom:14rpx;
}
image{
  width:90rpx;
  height:90rpx;
  background:#ccc;
  border-radius:100%;
}
.ask{
  margin-bottom:30rpx;
}
.ask,.answer{
  display:flex;
}
.con{
  flex:1;
  font-size:28rpx;
  line-height:46rpx;
  background:#f5f5f5;
  padding:16rpx 11rpx;
  border-radius:10rpx;
}
.name{
  color:#464646;
}
.pre{
  white-space:pre-wrap;
}
.ask image{
  margin-right:28rpx;
}
.ask .text{
  
}
.answer image{
  margin-left:28rpx;
}
.flex{
  display:flex;
  align-items:center;
  justify-content:space-between;
}
.text::before{
  content:"问";
  background:#e7b674;
  color:#fff;
  padding:6rpx 8rpx;
  font-size:24rpx;
  border-radius:8rpx;
}
.answer .text::before{
  content:"答";
  background:#1adce8;
}


.clear::after{
  content:"";
  display:block;
  height:0;
  visibility:hidden;
  overflow:hidden;
  clear:both;
}