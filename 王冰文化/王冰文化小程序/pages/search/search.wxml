<!--pages/search/search.wxml-->
<import src='../../plugins/wxParse/wxParse.wxml' />
<view class="wrap">
  <view class="search_wrap">
    <view class="search">
        <icon type="search" size="16"/>
        <view class="search_input">
          <input bindinput="autoInput" confirm-type="search" focus="{{ true }}" placeholder="请输入您要搜索的内容" />
        </view>
    </view>
    <view class="start" bindtap="search">
      搜索
    </view>
  </view>

  <view class="search_result">
    <block wx:if="{{ items.length }}">
      <talk  
        wx:for="{{ items }}" 
        wx:key="index"  
        item="{{ item }}" 
        wx:if="{{ item.myself }}" 
        userInfo="{{ userInfo }}" 
        customService="{{ service }}" 
      />
    </block>
    <view class="none" wx:else>暂无提问结果，快去提问吧</view>
  </view>
</view>